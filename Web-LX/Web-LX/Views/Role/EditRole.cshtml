@model Web_LX.Entities.RoleEnt
@{
    ViewBag.Title = "EditarRol";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Matriculas Activas</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Administration/Inicio">Dashboard</a></li>
                <li class="breadcrumb-item">Reportes</li>
                <li class="breadcrumb-item active">Matriculas Activas</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Rol:</h3>

                        @using (Html.BeginForm("EditRole", "Role", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.IdRol)
                            <div class="row mb-3 mx-auto">
                                <div class="col-md-8 mx-auto">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.TextBoxFor(m => m.Name, new { @type = "text", @placeholder = "Nombre del Rol", @class = "form-control" })
                                        <label for="inputRolName">Nombre del Rol</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3 mx-auto">
                                <div class="col-md-8 mx-auto">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(m => m.IdRol, new { @type = "text", @placeholder = "Id de Usuario", @class = "form-control", @disabled = "disabled" })
                                        <label for="inputLastName">Id Usuario que Modifica</label>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end mb-3">
                                <button type="submit" class="btn btn-primary btn-block">Actualizar Rol</button>
                            </div>


                        }

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
