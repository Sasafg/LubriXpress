@model Web_LX.Entities.UserEnt


@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Inicio</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Index">Inicio</a></li>

            </ol>
        </nav>
    </div><!-- End Page Title -->

    @if (Session["RolUsuario"].ToString() == "1")
    {
        <section class="section dashboard">
            <div class="row">

                <!-- Left side columns -->
                <div>
                    <div class="row">

                        <!-- Cards -->
                        <div class="col-xxl-3 col-md-6">
                            <div class="card info-card sales-card">
                                <div class="card-body">
                                    <h5 class="card-title">Citas Pendientes  </h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-bar-chart"></i>
                                        </div>
                                        <div class="ps-3">
                                            <a href="@Url.Action("ConsultPreRegisters","Registration")"><h6>@Session["PreRegisterPending"]</h6></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Matriculas Card -->
                        <div class="col-xxl-3 col-md-6">
                            <div class="card info-card sales-card">
                                <div class="card-body">
                                    <h5 class="card-title">Pendientes de Pago</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-card-list"></i>
                                        </div>
                                        <div class="ps-3">
                                            <a href="@Url.Action("ConsultRegisterToday","Registration")"><h6>@Session["RegisterToday"]</h6></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- MatriculasMonto Card -->
                        <div class="col-xxl-3 col-md-6">
                            <div class="card info-card sales-card">
                                <div class="card-body">
                                    <h5 class="card-title">Remuneración de Hoy</h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-cash-coin"></i>
                                        </div>
                                        <div class="ps-3">
                                            <a><h6 style="font-size:100%">@Session["TotalRegisterToday"]</h6></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div><!-- End Left side columns -->

            </div>
        </section>
    }
    else
    {

        <div>
            <h2 style=" margin: 5%; text-transform: uppercase; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: bold; font-size: 8.5em; text-align: center; position: center;">  Bienvenido  </h2>
            @*<h3>
                  <span>Profesor: @Model.Name @Model.LastName</span>
                </h3>*@

        </div>


    }
</main><!-- End #main -->
